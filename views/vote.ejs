<!doctype html>
<html>
  <head>
    <title>Right Now</title>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified Materialize CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.2/css/materialize.min.css">
    <link rel="stylesheet" href="/custom.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>
  <body>
    <p class="poll-data" hidden><%= pollData.id %><p>

    <div class="row vote-poll">
        <div class="col s12">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= pollData.title %></span>
              <p><%= pollData.question %></p>
              <h5 id="poll-closed" hidden>Poll Has Been Closed!<h5>
              <h5 id="vote-closed" hidden>Thanks For Your Vote!<h5>
            </div>
            <div class="card-action">
              <%  pollData.responses.forEach(function (response) { %>
                  <div id="responses">
                    <button class="btn waves-effect waves-light"><%= response %></button>
                  </div>
                  <br>
              <%  }) %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/jquery.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/application.js"></script>
    <script src="/vote.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.2/js/materialize.min.js"></script>
  </body>
</html>
